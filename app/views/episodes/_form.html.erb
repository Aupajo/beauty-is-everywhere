<%= form_for(episode) do |f| %>
  <% if episode.errors.any? %>
    <div id="error_explanation">
      <h2>Aww shoot</h2>

      <ul>
      <% episode.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.field do %>
    <%= f.label :series %>
    <% Series.all.each do |series| %>
      <label style="font-weight: normal">
        <%= f.radio_button :series_id, series.id %>
        <%= series.name %>
      </label>
    <% end %>

    <label style="font-weight: normal">
      <%= f.radio_button :series_id, '' %>
      Other
      <%= f.text_field :new_series_name, placeholder: 'Enter new series nameâ€¦' %>
    </label>
  <% end %>

  <%= f.simple :text_field, :name %>

  <%= f.simple :number_field, :happy_little_trees %>

  <%= f.simple :check_box, :cabin? %>

  <%= f.simple :number_field, :snowy_mountains %>

  <%= f.simple :number_field, :critters %>

  <div class="actions">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>
