<p id="notice"><%= notice %></p>

<h3><%= @episode.name %></h3>
<div class="canvas" style="font: 8px/4px monospace">
  <% if @episode.snowy_mountains.present? %>
    <%= paint_3peak_mountain %>
  <% end %>
</div>


<% @episode.critters.times do %>
  <% @critter_count = @critter_count.to_i + 1 %>
  <%= image_tag "squirrel.jpg",
    class: 'critter-background',
    width: 100,
    style: "
      position: fixed;
      top:  #{150 * @critter_count}px;
      left: -100px;
    "
  %>
<% end %>

<%= link_to 'Edit', edit_episode_path(@episode) %> |
<%= link_to 'Back', episodes_path %>
