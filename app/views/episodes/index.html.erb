<p id="notice"><%= notice %></p>

<h1>Episodes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Series</th>
      <th>Happy little trees</th>
      <th>Cabin</th>
      <th>Snowy mountains</th>
      <th>Critters</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.name %></td>
        <td><%= episode.series.name if episode.series %></td>
        <td><%= episode.happy_little_trees %></td>
        <td><%= episode.cabin %></td>
        <td><%= episode.snowy_mountains %></td>
        <td><%= episode.critters %></td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

